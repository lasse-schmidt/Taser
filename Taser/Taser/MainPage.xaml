<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Taser.MainPage"
             BackgroundColor="#f1f1f1">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Taser" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <StackLayout Padding="100">
            <Button Text="Tase" CornerRadius="100" FontSize="32" FontAttributes="Bold" HeightRequest="200" BorderColor="#E50000" BorderWidth="5" BackgroundColor="#f00" TextColor="#fff" Pressed="Button_Pressed" Released="Button_Released"></Button>
        </StackLayout>
        
    </StackLayout>

</ContentPage>
